@model NorSalStaff_0._1.ViewModels.Administration.CreateRoleViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Create</h1>

    <h4>Create New Role:</h4>
    <hr />
    <form asp-action="Create" method="post" class="mt-3" style="padding: 10px; background-color: whitesmoke; border-radius: 3px; border: 1px solid #797a7b21;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="padding: 20px 10px 1px 10px;background-color: mintcream;border-radius: 2px;margin-left: -10px;margin-right: -10px;margin-top: -9px;border-bottom: 1px solid #e5e5e5;">
            <div class="form-group row">
                <label asp-for="@Model.RoleName" for="@Model.RoleName" class="col-sm-2 col-form-label">Role Name:</label>
                <div class="col-sm-10">
                    <input asp-for="@Model.RoleName" id="@Model.RoleName" class="form-control" name="roleName" />
                </div>
                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row" style=" padding: inherit; border-radius: 2px; margin-left: -9px; margin-right: -9px; ">
            <h5>Users List:</h5>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Users[i].UserId" />
                <input type="hidden" asp-for="@Model.Users[i].User" />

                <div class="form-check col-12">
                    <div class="row">
                        <div class="col-sm-2">
                            <input asp-for="@Model.Users[i].IsChecked" id="@Model.Users[i].UserId" class="form-check-input" style="position: relative; width: 35px;" />
                            <label for="@Model.Users[i].UserId" class="form-check-label col-form-label">
                                Name: @Model.Users[i].User.UserName
                            </label>
                        </div>
                        <label for="@Model.Users[i].UserId" class="form-check-label col-sm-10 col-form-label">
                            Email: @Model.Users[i].User.Email
                        </label>
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" style="width:75px;" />
            <a asp-action="Index" class="btn btn-danger" style="width:75px;">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
